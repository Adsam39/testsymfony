{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">Editer un contact</div>
                <div class="card-body">
                    <form action="{{ path('app_update', {'id': contact.id}) }}" method="POST">
                        <div class="form-group">
                            <label for="name">Nom</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Entrez un nom" value="{{ contact.name }}">
                        </div>
                        <div class="form-group">
                            <label for="profession">Profession</label>
                            <input type="text" class="form-control" id="profession" name="profession" placeholder="Entrez une profession" value="{{ contact.profession }}">
                        </div>
                        <div class="form-group">
                            <label for="department">Département</label>
                            <input type="text" class="form-control" id="department" name="department" placeholder="Entrez un département" value="{{ contact.departement }}">
                        </div>
                        <div class="form-group">
                            <label for="city">Ville</label>
                            <input type="text" class="form-control" id="city" name="city" placeholder="Entrez une ville" value="{{ contact.ville }}">
                        </div>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-plus mr-2"></i> Editer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}