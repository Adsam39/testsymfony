{% extends 'base.html.twig' %}

{% block body %}
{% include 'include/header.html.twig' %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">Ajouter un contact</div>
                <div class="card-body">
                    <form action="{{ path('app_add_post') }}" method="POST">
                        <div class="form-group">
                            <label for="name">Nom</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Entrez un nom">
                        </div><br>
                        <div class="form-group">
                            <label for="profession">Profession</label>
                            <input type="text" class="form-control" id="profession" name="profession" placeholder="Entrez une profession">
                        </div><br>
                        <div class="form-group">
                            <label for="department">Département</label>
                            <input type="text" class="form-control" id="department" name="department" placeholder="Entrez un département">
                        </div><br>
                        <div class="form-group">
                            <label for="city">Ville</label>
                            <input type="text" class="form-control" id="city" name="city" placeholder="Entrez une ville">
                        </div><br>
                        <button type="submit" class="btn btn-primary" style="margin-left: 500px;"><i class="fas fa-plus mr-2"></i> Ajouter</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}